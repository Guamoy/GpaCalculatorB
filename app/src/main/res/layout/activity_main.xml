<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/detailed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="288dp"
        android:text="Detailed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/simple"
        android:layout_width="222dp"
        android:layout_height="85dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="104dp"
        android:backgroundTint="@color/material_dynamic_primary50"
        android:fontFamily="@font/archivo_black"
        android:text="Calculate Future GPA"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gradeNeededButton"
        android:layout_width="213dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="104dp"
        android:backgroundTint="@color/material_dynamic_primary60"
        android:fontFamily="@font/archivo_black"
        android:text="What Grade Do I Need on the Final?"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral_variant99"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/purple_500" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="382dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:text="GPA Calculator"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/material_dynamic_primary50"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>